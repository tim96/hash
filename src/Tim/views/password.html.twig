{% extends 'layout.html.twig' %}

{% if form is defined %}
    {% form_theme form 'form/fields.twig' %}
{% endif %}

{% block title %}
    HashCode - Generate password
{% endblock %}

{% block meta_tags %}
    <meta name="description" content="Silex framework tutorial">
    <meta name="keywords" content="Silex,PHP,Symfony,framework,tutorial,example">
    <meta name="author" content="tim96">
{% endblock %}

{% block content %}

    {# todo: rewrite form design #}
    <div class="row">
        <div class="col-md-12">
            {{ form(form, {'action': path('password'), 'method': 'POST'}) }}
        </div>
    </div>

    {% if result is not null %}
        <div class="hash-result-body">
            <table class="table table-striped">
                <thead><h2>Password generator result</h2></thead>
                <tbody>
                {% for item in result %}
                    <tr>
                        <td><h4>{{ item }}</h4></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}